<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="150dp"
  android:layout_marginLeft="10dp"
  android:layout_marginTop="8dp"
  android:layout_marginRight="10dp"
  android:background="@color/colorWhiteMilk"
  android:elevation="10dp"
  android:orientation="horizontal">


    <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="52dp"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="50dp"
      android:text="نام کالا"
      android:textSize="9dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="@+id/tv_info11"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/textView11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:text="قیمت بدون تخفیف"
      android:textSize="9dp"
      app:layout_constraintBottom_toTopOf="@+id/txt_price_no_offer"
      app:layout_constraintEnd_toEndOf="@+id/txt_price_no_offer" />

    <TextView
      android:id="@+id/tv_info11"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginBottom="12dp"
      android:text="سود"
      android:textSize="9dp"
      app:layout_constraintBottom_toTopOf="@+id/tv_show_sod_sell"
      app:layout_constraintStart_toStartOf="@+id/tv_show_sod_sell" />

    <TextView
      android:id="@+id/tv_show_sod_sell"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="72dp"
      android:layout_marginEnd="71dp"
      android:text="1000"
      app:layout_constraintBottom_toBottomOf="@+id/textView16"
      app:layout_constraintEnd_toStartOf="@+id/txt_offer"
      app:layout_constraintStart_toEndOf="@+id/textView5"
      app:layout_constraintTop_toTopOf="@+id/textView16" />

    <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="171dp"
      android:layout_marginTop="4dp"
      android:text="تعداد"
      android:textSize="9dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="30dp"
      android:layout_marginBottom="12dp"
      android:text="تخفیف"
      android:textSize="9dp"
      app:layout_constraintBottom_toTopOf="@+id/textView16"
      app:layout_constraintEnd_toEndOf="parent" />

    <TextView
      android:id="@+id/textView8"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="52dp"
      android:layout_marginTop="4dp"
      android:text="فی"
      android:textSize="9dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/txt_offer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/textView6"
      app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
      android:id="@+id/textView16"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="9dp"
      android:text="%"
      android:textStyle="bold"
      app:layout_constraintBaseline_toBaselineOf="@+id/txt_offer"
      app:layout_constraintEnd_toEndOf="@+id/txt_offer" />

    <TextView
      android:id="@+id/txt_fi_k"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:text="35000"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/textView8"
      app:layout_constraintStart_toEndOf="@+id/textView8"
      app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
      android:id="@+id/txt_price_no_offer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="63dp"
      android:layout_marginEnd="64dp"
      android:text="1252411"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/tv_show_sod_sell"
      app:layout_constraintEnd_toStartOf="@+id/tv_info11"
      app:layout_constraintStart_toEndOf="@+id/textView10"
      app:layout_constraintTop_toTopOf="@+id/tv_show_sod_sell" />

    <TextView
      android:id="@+id/txt_price_offer"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="34dp"
      android:text="101050"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/txt_price_no_offer"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/txt_price_no_offer" />

    <TextView
      android:id="@+id/txt_show_count_kala"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:text="10"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="@+id/textView5"
      app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
      android:id="@+id/txt_show_name_k"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="7dp"
      android:fontFamily="sans-serif-medium"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@+id/textView3"
      app:layout_constraintStart_toStartOf="@+id/textView3"
      app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
      android:id="@+id/textView10"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:text="قیمت با تخفیف"
      android:textSize="9dp"
      app:layout_constraintBottom_toTopOf="@+id/txt_price_offer"
      app:layout_constraintStart_toStartOf="@+id/txt_price_offer" />

</androidx.constraintlayout.widget.ConstraintLayout>